@model RealEstate.Models.LoanEditViewModel

@{
    ViewData["Title"] = "EditClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditClient</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Client.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Client.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Client.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Client.LastName)
            </dd>
        </dl>
        </div>
    </div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="EditClient">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Client.ClientId" />

                    <div class="form-group">
                        <label asp-for="Client.DepositAmount" class="control-label"></label>
                        <input asp-for="Client.DepositAmount" class="form-control" />
                        <span asp-validation-for="Client.DepositAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Client.ApprovedAmount" class="control-label"></label>
                        <input asp-for="Client.ApprovedAmount" class="form-control" />
                        <span asp-validation-for="Client.ApprovedAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Client.ApprovalDate" class="control-label"></label>
                        <input asp-for="Client.ApprovalDate" class="form-control" />
                        <span asp-validation-for="Client.ApprovalDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Client.InspectionDate" class="control-label"></label>
                        <input asp-for="Client.InspectionDate" class="form-control" />
                        <span asp-validation-for="Client.InspectionDate" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Checklist.IsClearToClose" /> @Html.DisplayNameFor(model => model.Checklist.IsClearToClose)
                        </label>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
